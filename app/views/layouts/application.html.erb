<!DOCTYPE html>
<html>
  <head>
    <title>DaumCafeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <% flash.each do |k,v| %>
    <div class="alert alert-<%= k %>" role="alert"><%= v %></div>
    <p> <%= v %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
